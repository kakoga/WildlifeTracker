<h1>Welcome to Wildlife Tracker</h1>

<h3>New Species</h3>
<form action="/species/create" method ="post">
  <label for='name'>Name</label>
  <input id='name' type='text' name='name'>
  <input type='submit' value='Save'>
</form>

<h2>View all records below</h2>
<table>
  <tr>
    <th>Species Name</th>
    <th>Created</th>
  </tr>
  <% @species.each do |i|%>
  <tr>
    <td><%= i.name %></td>
    <td><%= i.created_at %></td>
    <% end %>
  </tr>
</table>

<form action="/species/edit" method = 'get'>
  <input type='submit' value='Edit Record'>
</form>
